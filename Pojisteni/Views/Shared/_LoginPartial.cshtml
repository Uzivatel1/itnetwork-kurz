@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li>
        <a class="nav-link text-dark">Přihlášen @User.Identity?.Name</a>
    </li>
    <li>
        @*<form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">*@
        <form class="form-inline" asp-area="" asp-controller="Account" asp-action="Logout">
            <button  type="submit" class="nav-link btn btn-link text-dark">Odhlásit</button>
        </form>
    </li>
}
else
{
    <li>
        <a class="nav-link" asp-area="" asp-controller="Account" asp-action="Register">Registrovat</a>
    </li>
    <li>
        <a class="nav-link" asp-area="" asp-controller="Account" asp-action="Login">Přihlásit</a>
    </li>
}
</ul>
