@model Pojisteni.Models.Insurance

@{
    ViewData["Title"] = "Detail pojištění";
}

<div class="container mb-5">

    <div class="row align-items-center">

        <div class="col-md-3">
            <img src="~/images/dummy150.png" />
        </div>

        <div class="col-md-3">
            <h3>
                <div class="row">
                    @Html.DisplayFor(model => model.User.Jmeno)
                    @Html.DisplayFor(model => model.User.Prijmeni)
                </div>
            </h3>
            <div class="row">
                @Html.DisplayFor(model => model.User.UliceCislo)
            </div>
            <div class="row">
                @Html.DisplayFor(model => model.User.Obec)
            </div>
            <div class="row">
                @Html.DisplayFor(model => model.User.PSC)
            </div>
        </div>

        <div class="col-md-6">
            <div class="row">
                @Html.DisplayFor(model => model.User.Email)
            </div>
            <div class="row">
                @Html.DisplayFor(model => model.User.Telefon)

            </div>
        </div>

    </div>

</div>

<div>
    <h2>Detail pojištění</h2>    
    <dl class="row my-5">
		<hr />
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Typ)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Typ)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Castka)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Castka)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Predmet)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Predmet)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PlatnostOd)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PlatnostOd)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PlatnostDo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PlatnostDo)
        </dd>       
    </dl>
</div>

<div class="container py-3">
    <div class="row text-center">
        <div class="col">
            @if (User.IsInRole("admin"))
            {
                <a class="btn btn-outline-warning" asp-action="Edit" asp-route-id="@Model?.Id">Upravit</a>
            }            
            <a class="btn btn-outline-primary" asp-action="Index">Zpět</a>
        </div>
    </div>
</div>
