@model Pojisteni.Models.Insurance

@{
    ViewData["Title"] = "Upravit pojištění";
}

<h2>Upravit pojištění</h2>

<form asp-action="Edit" class="py-5">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />

    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="Typ" class="control-label"></label>
                <input asp-for="Typ" class="form-control" />
                <span asp-validation-for="Typ" class="text-danger"></span>
            </div>
        </div>

        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="UserId" class="control-label"></label>
                <select asp-for="UserId" class="form-control" asp-items="ViewBag.UserId"></select>
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="Castka" class="control-label"></label>
                <input asp-for="Castka" class="form-control" />
                <span asp-validation-for="Castka" class="text-danger"></span>
            </div>
        </div>

        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="Predmet" class="control-label"></label>
                <input asp-for="Predmet" class="form-control" />
                <span asp-validation-for="Predmet" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="PlatnostOd" class="control-label"></label>
                <input asp-for="PlatnostOd" class="form-control" />
                <span asp-validation-for="PlatnostOd" class="text-danger"></span>
            </div>
        </div>

        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="PlatnostDo" class="control-label"></label>
                <input asp-for="PlatnostDo" class="form-control" />
                <span asp-validation-for="PlatnostDo" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="container pt-5">
        <div class="row text-center">
            <div class="form-group">
                <input type="submit" value="Uložit" class="btn btn-outline-primary" />
                <a class="btn btn-outline-primary" asp-action="Index">Zpět</a>
            </div>
        </div>
    </div>
</form>

